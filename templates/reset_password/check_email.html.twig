{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/check-password.css') }}">
{% endblock %}

{% block body %}
    <div class="check-password-container">
        <div class="check-password-content">
            <h1 class="check-password-title">Réinitialisation du mot de passe</h1>
            
            <div class="check-password-text">
                {% if maskedEmail %}
                    <p>Un email de réinitialisation a été envoyé à l’adresse <strong>{{ maskedEmail }}</strong>.</p>
                {% else %}
                    <p>Si un compte existe avec cette adresse email, vous recevrez un message pour réinitialiser votre mot de passe.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
