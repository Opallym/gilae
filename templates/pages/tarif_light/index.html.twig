{% extends 'base.html.twig' %}

{% block title %}Tarifs/Packs | Gilae Conciergerie
{% endblock %}

{% block body %}
	{{ include('pages/navbar/navbar.html.twig') }}

	<style>
		.pricing-container {
			max-width: 1000px;
			margin: 40px auto;
			padding: 0 20px;
			font-family: 'Arial', sans-serif;
			color: #ffffff;
		}

		.pricing-header {
			text-align: center;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.pricing-header h1 {
			font-size: 3.5rem;
			color: #333;
			margin-bottom: 10px;
			flex-shrink: 0;
			color:#ffffff;
		}

		.header-image {
			max-width: 400px; /* Ajustez cette valeur selon vos besoins */
			height: auto;
		}

		.header-image-left {
			max-width: 500px; /* Ajustez cette valeur selon vos besoins */
			height: auto;
		}

		.pricing-cards {
			display: flex;
			justify-content: space-between;
			flex-wrap: wrap;
			gap: 60px;
		}

		.pricing-card {
			flex: 1;
			min-width: 50px;
			background: white;
			border-radius: 30px;
			box-shadow: 0 5px 15px rgb(0, 0, 0);
			padding: 30px;
			text-align: center;
		}


		.pricing-card h2 {
			font-size: 3rem;
			color: #2c3e50;
			margin-bottom: 5px;
		}

		.price {
			padding: 60px 0;
			font-size: 2.5rem;
			font-weight: bold;
			color: #2c3e50;
			margin: 5px 0;
		}

		.price small {
			font-size: 2rem;
			color: #2c3e50;
		}

		.features {
			font-size: 1.7rem;
			list-style: none;
			padding: 0;
			margin: 30px 0;
			text-align: center;
		}

		.features li {
			padding: 40px 0;
			border-bottom: 1px solid #ecf0f1;
			color: #2c3e50;
		}

		.divider {
			height: 1px;
			background: linear-gradient(to right, transparent, #bdc3c7, transparent);
			margin: 20px 0;
		}

		@media(max-width: 768px) {
			.pricing-cards {
				flex-direction: column;
			}

			.pricing-header {
				flex-direction: column;
			}

			.header-image {
				max-width: 100px;
			}
		}
	</style>

	<div class="pricing-container">
		<div class="pricing-header">
			<img src="{{ asset('assets/images/logo/flowerleft.png') }}" class="header-image-left" alt="Fleur gauche">
			<h1>Tarifs / Packs</h1>
			<img src="{{ asset('assets/images/logo/flowerright.png') }}" class="header-image" alt="Fleur droite">
		</div>

		<div
			class="pricing-cards">
			<!-- Carte Basic -->
			<div class="pricing-card">
				<h2>Basic</h2>
				<div class="price">90 €
					<div class="price-text">
						<small>/mois</small>
					</div>
				</div>

				<ul class="features">
					<li>Gestion des réservations</li>
					<li>Accueil des voyageurs</li>
					<li>Assistance 7j/7</li>
					<img src="{{ asset('assets/images/logo/menageb.png') }}" style="width: 250px; height: auto;" alt="Icône ménage">
				</ul>
			</div>

			<!-- Carte Confort -->
			<div class="pricing-card">
				<h2>Confort</h2>
				<div class="price">7%
					<div class="price-text">
						<small>réservations</small>
					</div>
				</div>

				<div class="divider"></div>

				<ul class="features">
					<li>Service Basic inclus</li>
					<li>Optimisation des tarifs</li>
					<li>Ménage inclus</li>
					<img src="{{ asset('assets/images/logo/telephoneb.png') }}" style="width: 250px; height: auto;" alt="Icône téléphone">
				</ul>
			</div>

			<!-- Carte Privilège -->
			<div class="pricing-card">
				<h2>Privilège</h2>
				<div class="price">15%
					<div class="price-text">
						<small>réservations</small>
					</div>
				</div>

				<div class="divider"></div>

				<ul class="features">
					<li>Service Confort inclus</li>
					<li>Conciergerie sur mesure</li>
					<li>Soins hôteliers</li>
					<img src="{{ asset('assets/images/logo/tarifb.png') }}" style="width: 250px; height: auto;" alt="Icône tarif">
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
