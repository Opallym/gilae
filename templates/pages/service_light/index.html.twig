{% extends 'base.html.twig' %}

{% block title %}Services | Gilae Conciergerie
{% endblock %}

{% block body %}
	{{ include('pages/navbar/navbar.html.twig') }}

	<style>

		body {
			background-color:rgb(255, 255, 255);
		}
		.service-container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 20px;
		}

		.service-header {
			text-align: center;
			margin-bottom: 40px;
		}

		.service-item {
			display: flex;
			align-items: center;
			margin-bottom: 60px;
			flex-wrap: wrap;
		}

		.service-text {
			flex: 1;
			min-width: 300px;
			padding: 20px;
			text-align: center;
		}

		.service-image {
			flex: 1;
			min-width: 300px;
			padding: 20px;
			text-align: center;
		}

		.service-header img {
			max-width: 100%;
			height: auto;
		}

		.service-item img {
			max-width: 100%;
			height: auto;
			transition: transform 0.3s ease;
		}

		@media(max-width: 768px) {
			.service-item {
				flex-direction: column;
			}

			.service-text,
			.service-image {
				min-width: 100%;
			}

			.service-item:nth-child(even) .service-text {
				order: 2;
			}
		}
	</style>

	<div class="service-container">
		<div class="service-header">
			<img src="{{ asset('assets/images/servicelight/TopLight.png') }}" alt="Services Gilae Conciergerie">
		</div>

		<!-- Premier service -->
		<div class="service-item">
			<div class="service-text">
				<img src="{{ asset('assets/images/servicelight/text1sLight.png') }}" alt="Description service 1">
			</div>
			<div class="service-image">
				<img src="{{ asset('assets/images/servicelight/calendarLight.png') }}" alt="Icône calendrier">
			</div>
		</div>

		<!-- Deuxième service -->
		<div class="service-item">
			<div class="service-image">
				<img src="{{ asset('assets/images/servicelight/tarifLight.png') }}" alt="Icône tarif">
			</div>
			<div class="service-text">
				<img src="{{ asset('assets/images/servicelight/text2sLight.png') }}" alt="Description service 2">
			</div>
		</div>

		<!-- Troisième service -->
		<div class="service-item">
			<div class="service-text">
				<img src="{{ asset('assets/images/servicelight/text3sLight.png') }}" alt="Description service 3">
			</div>
			<div class="service-image">
				<img src="{{ asset('assets/images/servicelight/menageLight.png') }}" alt="Icône ménage">
			</div>
		</div>

		<!-- Quatrième service -->
		<div class="service-item">
			<div class="service-image">
				<img src="{{ asset('assets/images/servicelight/telephoneLight.png') }}" alt="Icône téléphone">
			</div>
			<div class="service-text">
				<img src="{{ asset('assets/images/servicelight/text4sLight.png') }}" alt="Description service 4">
			</div>
		</div>
	</div>
{% endblock %}
