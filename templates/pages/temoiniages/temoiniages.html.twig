{% extends 'base.html.twig' %}

{% block title %}Avis Clients - Gilaë
{% endblock %}

{% block body %}
	<div class="testimonials-containertemoiniage">
		<div
			class="testimonials-wrappertemoiniage">

			<!-- Header avec décoration -->
			<div class="headertemoiniage">
				<div class="leaf-decorationtemoignageleft">
				<img src="{{ asset('assets/images/temoiniage/plg.webp') }}" class="leaf-decorationtemoiniageleft" alt="logo fin de page">
				</div>
                <div class="leaf-decorationtemoiniageright">
				<img src="{{ asset('assets/images/temoiniage/pld.webp') }}" class="leaf-decorationtemoiniageright" alt="logo fin de page">
				</div>
				<h1 class="titletemoiniage">Avis Clients</h1>
				
			</div>

			<!-- Liste des témoignages -->
			<div class="testimonials-listtemoiniage">
				{% set clients = [
                {'nom': 'Marie Dubois'},
                {'nom': 'Jean Dupont'},
                {'nom': 'Sophie Martin'},
                {'nom': 'Pierre Laurent'}
            ] %}

				{% for client in clients %}
					<div class="testimonial-itemtemoiniage">
						<div class="testimonial-cardtemoiniage">
							<p class="testimonial-texttemoiniage">
								Un service de conciergerie exceptionnel ! Professionnel, attentif et toujours à nos côtés.
							</p>
							<div class="stars">
								{% for i in 1..5 %}
									<span class="star filledtemoiniage">★</span>
								{% endfor %}
							</div>
							<p class="testimonial-nametemoiniage">{{ client.nom }}</p>
						</div>
						{% if not loop.last %}
							<div class="separatortemoiniage">
								<div class="dottemoiniage"></div>
							</div>
						{% endif %}
					</div>
				{% endfor %}
			</div>

			<!-- Footer avec marque -->
			<div class="footertemoiniage">
				<div class="leaf-decorationtemoiniage">
				<img src="{{ asset('assets/images/temoiniage/logofooter.webp') }}" class="leaf-decorationtemoiniage" alt="logo fin de page">
				</div>
			</div>

		</div>
	</div>
{% endblock %}
