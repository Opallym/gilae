{% extends 'base.html.twig' %}

{% block title %}Gila√´ - Contact
{% endblock %}

{% block body %}
	<div
		class="v1">

		{# D√©corations gauche et droite #}
		<div class="image-container gauche">
			<div class="decorative-imagecontactgauche" alt="D√©coration-gauche"></div>
		</div>

		<div class="image-container droite">
			<div class="decorative-imagecontactdroite" alt="D√©coration-droite"></div>
		</div>

		<h1 class="titrecontactformulaire elegant-underline">Nous Contacter</h1>
		<div class="container">


			{% for label, messages in app.flashes %}
				<div class="alert alert-{{ label }}">
					{% for message in messages %}
						{{ message }}
					{% endfor %}
				</div>
			{% endfor %}

			{{ form_start(form, {'attr': {'class': 'contact-form'}}) }}

			<div class="input-group">
				<div class="icon">‚úâÔ∏è</div>
				<div class="nouscontacterdark-light">
					{{ form_widget(form.fromEmail, {
    'attr': {
        'placeholder': 'Entrer votre adresse mail...',
        'required': true,
        'class': 'dark-light-input'
    }
}) }}

					{{ form_errors(form.fromEmail) }}
				</div>
			</div>

			<div class="input-group">
				<div class="icon">üìû</div>
				{{ form_widget(form.phoneNumber, {
    'attr': {
      'placeholder': 'Entrer votre num√©ro de t√©l√©phone...',
      'required': true,
      'class': 'dark-light-input'
    }
  }) }}
				{{ form_errors(form.phoneNumber) }}
			</div>

			<div class="input-group">
				{{ form_widget(form.subject, {'attr': {'class': 'styled-select', 'required': true}}) }}
				{{ form_errors(form.subject) }}
			</div>

			<div class="textarea-group">
				{{ form_widget(form.body, {
  'attr': {
    'placeholder': 'Entrez votre demande...',
    'rows': 8,
    'required': true,
    'class': 'dark-light-input'
  }
}) }}
				{{ form_errors(form.body) }}
			</div>

			<button class="contactbutton" type="submit">Envoyez</button>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
